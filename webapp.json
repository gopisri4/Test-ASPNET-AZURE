{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "AspPrefix": {
            "type": "string"
                    },
        "WebPrefix": {
            "type": "string"
                      }
            },
    "functions": [],
    "variables": {
        "AspName":"[concat(parameters('AspPrefix'),uniqueString(resourceGroup().id))]",
        "WebName":"[concat(parameters('WebPrefix'),uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('AspName')]",
            "location":"[resourceGroup().location]",
            "kind": "server",
            "sku": {
                "name": "P1v2",
                "size": "P1v2"
                    },
            "properties": {}
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('WebName')]",
            "location":"[resourceGroup().location]",
            "kind": "app",
            "dependsOn": ["[resourceId('Microsoft.Web/serverfarms',variables('AspName'))]"],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',variables('AspName'))]"
            }
        }
    ],
    "outputs": {}
}